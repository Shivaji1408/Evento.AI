<% layout('layouts/boilerplate') %>

<div class="container py-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold" style="color:#000;">
      <i class="fa-solid fa-utensils me-2 text-primary"></i> Register a New Caterer
    </h2>
    <p class="text-muted fs-6">
      Add your catering services to help clients create delicious memories.
    </p>
  </div>

  <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width:800px; background-color:#fff;">
    <div class="card-body px-5 py-4">
      <form action="/caterers" method="POST" enctype="multipart/form-data">

        <!-- Caterer Name -->
        <div class="mb-4">
          <label for="name" class="form-label fw-semibold" style="color:#000;">Caterer Name <span class="text-danger">*</span></label>
          <input type="text" id="name" name="cater[name]" class="form-control form-control-lg shadow-sm" placeholder="e.g., Spice Delight Caterers" required>
        </div>

        <!-- Cuisine Type -->
        <div class="mb-4">
          <label for="cuisineType" class="form-label fw-semibold" style="color:#000;">Cuisine Type</label>
          <input type="text" id="cuisineType" name="cater[cuisineType]" class="form-control shadow-sm" placeholder="e.g., Indian, Continental, Multi-cuisine">
        </div>

        <!-- Specialties -->
        <div class="mb-4">
          <label for="specialties" class="form-label fw-semibold" style="color:#000;">Specialties (comma-separated)</label>
          <input type="text" id="specialties" name="cater[specialties]" class="form-control shadow-sm" placeholder="e.g., Veg, Non-Veg, Desserts">
        </div>

        <!-- City -->
        <div class="mb-4">
          <label for="city" class="form-label fw-semibold" style="color:#000;">City</label>
          <input type="text" id="city" name="cater[city]" class="form-control shadow-sm" placeholder="e.g., Delhi">
        </div>

        <!-- Price -->
        <div class="mb-4">
          <label for="pricePerPlate" class="form-label fw-semibold" style="color:#000;">Price Per Plate (â‚¹) <span class="text-danger">*</span></label>
          <input type="number" id="pricePerPlate" name="cater[pricePerPlate]" class="form-control shadow-sm" placeholder="e.g., 600" required>
        </div>

        <!-- Contact -->
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="contactNumber" class="form-label fw-semibold" style="color:#000;">Contact Number</label>
            <input type="text" id="contactNumber" name="cater[contactNumber]" class="form-control shadow-sm" placeholder="+91 9876543210">
          </div>
          <div class="col-md-6">
            <label for="email" class="form-label fw-semibold" style="color:#000;">Email</label>
            <input type="email" id="email" name="cater[email]" class="form-control shadow-sm" placeholder="e.g., contact@spicedelight.com">
          </div>
        </div>

        <!-- Image -->
        <div class="mb-4">
          <label for="image" class="form-label fw-semibold" style="color:#000;">Upload Image</label>
          <input type="file" id="image" name="image" class="form-control shadow-sm">
        </div>

        <!-- Submit -->
        <div class="d-flex justify-content-between mt-4">
          <a href="/caterers" class="btn btn-outline-secondary px-4"><i class="fa-solid fa-arrow-left me-2"></i> Back</a>
          <button type="submit" class="btn btn-primary px-5 py-2 fw-semibold shadow-sm"><i class="fa-solid fa-paper-plane me-2"></i> Save Caterer</button>
        </div>
      </form>
    </div>
  </div>
</div>
