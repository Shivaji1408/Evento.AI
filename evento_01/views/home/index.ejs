<!-- ====================== CUSTOM NAVBAR STYLES ====================== -->
<style>
  /* Navbar gradient */
  nav.navbar {
    background: linear-gradient(90deg, #6a11cb, #ff416c);
  }

  /* Navbar links hover effect */
  .navbar-nav .nav-link {
    transition: all 0.3s ease;
    position: relative;
    color: #fff !important;
    font-weight: 600;
  }

  .navbar-nav .nav-link:hover {
    transform: scale(1.05);
    color: #ffe066 !important; /* bright yellow on hover */
  }

  /* Active link underline */
  .navbar-nav .active-link::after {
    content: '';
    display: block;
    margin: 4px auto 0;
    height: 3px;
    width: 40%;
    background-color: #ffe066;
    border-radius: 2px;
  }

  /* Navbar dropdown styling */
  .navbar-nav .dropdown-menu {
    background: linear-gradient(180deg, #6a11cb, #ff416c);
    border: none;
  }

  .navbar-nav .dropdown-item {
    color: #fff;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .navbar-nav .dropdown-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: scale(1.05);
  }

  /* Smooth button hover */
  .btn-outline-warning:hover {
    background-color: #ffe066;
    color: #6a11cb;
    border-color: #ffe066;
    transition: all 0.3s ease;
  }
</style>
