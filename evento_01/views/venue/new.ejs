<% layout('layouts/boilerplate') %>

<div class="container py-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold" style="color: #000;">
      <i class="fa-solid fa-building-columns me-2 text-primary"></i> Register a New Venue
    </h2>
    <p class="text-muted fs-6">
      Add your venue details to help clients find the perfect place for their events.
    </p>
  </div>

  <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px; background-color: #fff;">
    <div class="card-body px-5 py-4">
      <form action="/venues" method="POST" enctype="multipart/form-data">

        <!-- Name -->
        <div class="mb-4">
          <label for="name" class="form-label fw-semibold" style="color:#000;">Venue Name <span class="text-danger">*</span></label>
          <input type="text" id="name" name="venue[name]" class="form-control form-control-lg shadow-sm" placeholder="e.g., Grand Palace Hall" required>
        </div>

        <!-- Address -->
        <div class="mb-4">
          <label for="address" class="form-label fw-semibold" style="color:#000;">Address <span class="text-danger">*</span></label>
          <input type="text" id="address" name="venue[address]" class="form-control shadow-sm" placeholder="Venue Address" required>
        </div>

        <!-- City & State -->
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="city" class="form-label fw-semibold" style="color:#000;">City <span class="text-danger">*</span></label>
            <input type="text" id="city" name="venue[city]" class="form-control shadow-sm" placeholder="e.g., Mumbai" required>
          </div>
          <div class="col-md-6">
            <label for="state" class="form-label fw-semibold" style="color:#000;">State</label>
            <input type="text" id="state" name="venue[state]" class="form-control shadow-sm" placeholder="e.g., Maharashtra">
          </div>
        </div>

        <!-- Capacity -->
        <div class="mb-4">
          <label for="capacity" class="form-label fw-semibold" style="color:#000;">Capacity <span class="text-danger">*</span></label>
          <input type="number" id="capacity" name="venue[capacity]" class="form-control shadow-sm" placeholder="e.g., 500" required>
        </div>

        <!-- Contact & Email -->
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="contactNumber" class="form-label fw-semibold" style="color:#000;">Contact Number</label>
            <input type="text" id="contactNumber" name="venue[contactNumber]" class="form-control shadow-sm" placeholder="+91 9876543210">
          </div>
          <div class="col-md-6">
            <label for="email" class="form-label fw-semibold" style="color:#000;">Email</label>
            <input type="email" id="email" name="venue[email]" class="form-control shadow-sm" placeholder="e.g., info@grandpalace.com">
          </div>
        </div>

        <!-- Amenities -->
        <div class="mb-4">
          <label for="amenities" class="form-label fw-semibold" style="color:#000;">Amenities (comma-separated)</label>
          <input type="text" id="amenities" name="venue[amenities]" class="form-control shadow-sm" placeholder="e.g., Parking, Air Conditioning, WiFi">
        </div>

        <!-- Price -->
        <div class="mb-4">
          <label for="pricePerDay" class="form-label fw-semibold" style="color:#000;">Price Per Day (â‚¹)</label>
          <input type="number" id="pricePerDay" name="venue[pricePerDay]" class="form-control shadow-sm" placeholder="e.g., 20000">
        </div>

        <!-- Image -->
        <div class="mb-4">
          <label for="image" class="form-label fw-semibold" style="color:#000;">Upload Venue Image</label>
          <input type="file" id="image" name="image" class="form-control shadow-sm">
        </div>

        <!-- Submit -->
        <div class="d-flex justify-content-between mt-4">
          <a href="/venues" class="btn btn-outline-secondary px-4"><i class="fa-solid fa-arrow-left me-2"></i> Back</a>
          <button type="submit" class="btn btn-primary px-5 py-2 fw-semibold shadow-sm"><i class="fa-solid fa-paper-plane me-2"></i> Save Venue</button>
        </div>
      </form>
    </div>
  </div>
</div>
