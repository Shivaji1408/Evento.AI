<% layout('layouts/boilerplate') %>

<section class="py-5" style="background-color: #f9f9f9;">
  <div class="container">

    <!-- Page Header -->
    <div class="text-center mb-4">
      <h2 class="fw-bold display-6 gradient-heading mb-2">
        <i class="fa-solid fa-palette me-2 text-warning"></i>
        Stunning Decor Services
      </h2>
      <p class="text-muted fs-5">Transform your event with unmatched decoration styles âœ¨</p>
    </div>

    <!-- FILTER BAR -->
    <form action="/decors" method="GET" class="card shadow-sm p-3 mb-4">
      <div class="row align-items-end">

        <!-- CITY FILTER -->
        <div class="col-md-4">
          <label class="form-label fw-semibold">Filter by City</label>
          <input
            type="text"
            class="form-control"
            name="city"
            placeholder="Enter city..."
            value="<%= filters.city %>"
          >
        </div>

        <div class="col-md-3">
          <button class="btn btn-primary w-100 mt-4">
            <i class="fa-solid fa-filter me-1"></i> Apply Filter
          </button>
        </div>

      </div>
    </form>

    <!-- Add New Decor Button -->
    <div class="text-end mb-3">
      <a href="/decors/new" class="btn btn-warning text-dark px-4 fw-semibold shadow-sm">
        <i class="fa-solid fa-plus me-2"></i>Add New Decor
      </a>
    </div>

    <!-- Decor Cards -->
    <div class="row g-4">
      <% if (decors && decors.length > 0) { %>
        <% decors.forEach(decor => { %>
          <div class="col-lg-4 col-md-6">
            <div class="card decor-card border-0 shadow-lg h-100 bg-white">

              <div class="position-relative">
                <img
                  src="<%= decor.imageUrl || 'https://via.placeholder.com/400x300?text=Decor+Image' %>"
                  class="card-img-top"
                >
                <span class="badge bg-gradient position-absolute top-0 start-0 m-3 px-3 py-2 shadow-sm">
                  <%= decor.style || 'Decor Service' %>
                </span>
              </div>

              <div class="card-body d-flex flex-column">
                <h5 class="fw-bold text-primary mb-1">
                  <i class="fa-solid fa-archway me-2"></i>
                  <%= decor.name %>
                </h5>

                <p class="text-muted mb-1">
                  <i class="fa-solid fa-location-dot text-danger me-1"></i>
                  <%= decor.city %>
                </p>

                <p class="text-muted small mb-2">
                  <i class="fa-solid fa-sparkles text-warning me-1"></i>
                  <strong>Services:</strong>
                  <%= decor.servicesOffered?.length ? decor.servicesOffered.join(", ") : "General Decoration" %>
                </p>

                <p class="fw-semibold text-success mb-3">
                  â‚¹ <%= decor.priceRange?.min %> - â‚¹ <%= decor.priceRange?.max %>
                </p>

                <div class="mt-auto">
                  <a href="/decors/<%= decor._id %>" class="btn btn-outline-primary w-100">
                    <i class="fa-solid fa-eye me-1"></i> View Details
                  </a>
                </div>
              </div>

            </div>
          </div>
        <% }) %>
      <% } else { %>

        <div class="col-12 text-center py-5">
          <h5 class="text-muted mb-3">No decor services found for this filter ðŸŽ€</h5>
          <a href="/decors" class="btn btn-secondary">Clear Filter</a>
        </div>

      <% } %>
    </div>

  </div>
</section>

<style>
  .gradient-heading {
    background: linear-gradient(90deg, #ff1a1a, #ff6347, #ff4500);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .decor-card img {
    height: 250px;
    object-fit: cover;
  }

  .decor-card {
    border-radius: 18px;
    transition: 0.3s ease;
  }

  .decor-card:hover {
    transform: translateY(-8px);
    box-shadow: 0px 10px 25px rgba(0,0,0,0.15);
  }

  .badge.bg-gradient {
    background: linear-gradient(135deg, #d4af37, #ffcf70);
    color: #000;
  }
</style>
