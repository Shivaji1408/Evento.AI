<% layout('layouts/boilerplate') %>

<div class="container py-4">

  <!-- ====================== HEADER + FILTERS ====================== -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
      <i class="fa-solid fa-utensils me-2"></i>Available Caterers
    </h2>

    <a href="/caters/new" class="btn btn-success">
      <i class="fa-solid fa-plus me-2"></i>Add New Caterer
    </a>
  </div>

  <!-- FILTER BAR -->
  <form class="row g-3 mb-4">
    <div class="col-md-4">
      <label class="form-label fw-semibold">Filter by City</label>
      <select name="city" class="form-select">
        <option value="">All Cities</option>

        <% 
          const cities = [...new Set(caters.map(c => c.city))];
          cities.forEach(c => { 
        %>
          <option value="<%= c %>" <%= filters.city === c ? "selected" : "" %>>
            <%= c %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-3 d-flex align-items-end">
      <button class="btn btn-primary w-100">
        <i class="fa-solid fa-filter me-1"></i>Apply
      </button>
    </div>

    <div class="col-md-3 d-flex align-items-end">
      <a href="/caterers" class="btn btn-secondary w-100">
        <i class="fa-solid fa-rotate-left me-1"></i>Reset
      </a>
    </div>
  </form>

  <!-- ====================== CATERER LIST ====================== -->
  <% if (caters && caters.length > 0) { %>
    <div class="row g-4">

      <% caters.forEach(cater => { %>
        <div class="col-lg-4 col-md-6">

          <div class="card h-100 shadow-sm border-0 rounded-3">

            <% if (cater.imageUrl) { %>
              <img src="<%= cater.imageUrl %>" class="card-img-top"
                style="height:220px; object-fit:cover;">
            <% } else { %>
              <img src="https://via.placeholder.com/400x220?text=<%= cater.name %>"
                class="card-img-top">
            <% } %>

            <div class="card-body d-flex flex-column">

              <h5 class="card-title fw-semibold"><%= cater.name %></h5>

              <p class="text-muted small mb-1">
                <i class="fa-solid fa-bowl-food text-warning me-1"></i>
                <%= cater.cuisineType %>
              </p>

              <% if (cater.specialties.length > 0) { %>
                <div class="d-flex flex-wrap gap-1 mb-2">
                  <% cater.specialties.forEach(s => { %>
                    <span class="badge bg-light text-dark border px-2 py-1"><%= s %></span>
                  <% }) %>
                </div>
              <% } %>

              <p class="fw-bold text-primary mb-2">
                <i class="fa-solid fa-indian-rupee-sign"></i>
                <%= cater.pricePerPlate %> / plate
              </p>

              <p class="text-muted small">
                <i class="fa-solid fa-city text-info me-1"></i>
                <%= cater.city %>
              </p>

              <div class="mt-auto d-flex justify-content-between border-top pt-2">

                <a href="/caterers/<%= cater._id %>" class="btn btn-outline-primary btn-sm">
                  <i class="fa-solid fa-eye me-1"></i>View
                </a>

                <div class="d-flex gap-2">
                  <a href="/caters/<%= cater._id %>/edit" class="btn btn-outline-warning btn-sm">
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>

                  <form action="/caters/<%= cater._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger btn-sm"
                      onclick="return confirm('Delete this caterer?')">
                      <i class="fa-solid fa-trash"></i>
                    </button>
                  </form>
                </div>

              </div>

            </div>

            <div class="card-footer small text-muted">
              Added on <%= new Date(cater.createdAt).toLocaleDateString() %>
            </div>

          </div>
        </div>
      <% }) %>

    </div>

  <% } else { %>

    <div class="text-center py-5">
      <i class="fa-solid fa-bowl-food fa-3x text-secondary mb-3"></i>
      <h5 class="text-muted">No caterers match your filters.</h5>
      <a href="/caterers" class="btn btn-primary mt-3">
        Reset Filters
      </a>
    </div>

  <% } %>

</div>
