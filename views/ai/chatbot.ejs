<% layout('layouts/boilerplate') %>

<div class="container py-5">
  <div class="chat-container shadow-lg rounded-4 mx-auto" style="max-width:900px;">
    <div class="chat-header text-center py-3">
      <h4 class="fw-bold m-0">Evento.AI Chat Assistant</h4>
      <p class="small text-muted m-0">Ask anything about venues, vendors, budgets â€” answer in English or Hindi.</p>
    </div>

    <div id="chatWindow" class="chat-window p-3" style="height:450px; overflow-y:auto; background:#fafafa; border-radius:8px;">
      <!-- messages appended here -->
    </div>

    <div class="chat-input-area p-3">
      <form id="chatForm" class="d-flex gap-2">
        <select id="language" class="form-select w-auto">
          <option value="English">English</option>
          <option value="Hindi">Hindi</option>
        </select>

        <input id="userMessage" type="text" class="form-control" placeholder="Type your message..." autocomplete="off" required>

        <button id="micBtn" type="button" class="btn btn-outline-secondary" title="Record voice">
          <i class="fa-solid fa-microphone"></i>
        </button>

        <button class="btn btn-primary" type="submit">Send</button>
      </form>
    </div>
  </div>
</div>

<style>
.chat-container { background: #fff; }
.chat-header { background: #f1f4ff; border-radius:12px 12px 0 0; }
.message { margin-bottom:12px; padding:10px 14px; border-radius:10px; max-width:75%; }
.user-msg { background:#007bff; color:#fff; margin-left:auto; text-align:right;}
.bot-msg { background:#fff; border:1px solid #ddd; color:#000; }
.small-meta { font-size:0.8rem; color:#666; margin-top:4px; }
</style>

<script src="/js/chatbot.js"></script>
